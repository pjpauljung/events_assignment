<div class="card mb-3">
  <h2 class="card-header h4">
    Comment #<%= comment.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <!-- Display user_id start -->
      <dd>
        <% if @comment.user.present? %>
          <%= link_to comment.user, comment.user %>
        <% end %>
      </dd>
      <!-- Display user_id end -->

      <dt>Event</dt>
      <!-- Display event_id start -->
      <dd>
        <% if @comment.event.present? %>
          <%= link_to comment.event, comment.event %>
        <% end %>
      </dd>
      <!-- Display event_id end -->

      <dt>Comment</dt>
      <!-- Display comment start -->
      <dd><%= comment.comment %></dd>
      <!-- Display comment end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back comment, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link comment start -->
      <div class="col">
        <% if current_user == @comment.user %>
          <%= link_to edit_comment_url(comment), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Edit link comment end -->

      <!-- Delete link comment start -->
      <div class="col">
        <% if current_user == @comment.user %>
          <%= link_to comment, method: :delete, data: { confirm: "Do you really want to delete this comment?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Delete link comment end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(comment.updated_at) %> ago
  </div>
</div>

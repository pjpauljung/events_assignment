<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Interested Events

    <a data-toggle="collapse" href="#user_interested_events_new_form">
      Add rsvp
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.interested_events.each do |rsvp| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to rsvp, rsvp %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_interested_events_new_form">
        <%= render partial: "users/user_interested_events_new_form" %>
      </div>
    </div>

  </ul>
</div>

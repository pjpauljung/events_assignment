<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Interested Events

    <a data-toggle="collapse" href="#event_interested_events_new_form">
      Add rsvp
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event.interested_events.each do |rsvp| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to rsvp, rsvp %>

        <% if current_user == rsvp.user %>
          <%= link_to rsvp, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_interested_events_new_form">
        <%= render partial: "events/event_interested_events_new_form" %>
      </div>
    </div>

  </ul>
</div>

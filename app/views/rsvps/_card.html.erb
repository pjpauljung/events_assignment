<div class="card mb-3">
  <h2 class="card-header h4">
    Rsvp #<%= rsvp.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @rsvp.user.present? %>
          <%= link_to rsvp.user, rsvp.user %>
        <% end %>
      </dd>

      <dt>Event</dt>
      <dd>
        <% if @rsvp.event.present? %>
          <%= link_to rsvp.event, rsvp.event %>
        <% end %>
      </dd>

      <dt>Rsvp selection</dt>
      <dd><%= rsvp.rsvp_selection %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back rsvp, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @rsvp.user %>
          <%= link_to edit_rsvp_url(rsvp), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @rsvp.user %>
          <%= link_to rsvp, method: :delete, data: { confirm: "Do you really want to delete this rsvp?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(rsvp.updated_at) %> ago
  </div>
</div>
